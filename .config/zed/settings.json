{
  "show_edit_predictions": false,
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "always"
  },

  "tab_size": 2,
  "relative_line_numbers": "enabled",
  "ui_font_size": 18.0,
  "buffer_line_height": "standard",
  "buffer_font_size": 22.0,
  "buffer_font_family": "Iosevka Nerd Font Mono",
  "agent_ui_font_size": 22.0,
  "theme": "Gruvbox Dark Hard",
  "cursor_blink": false,
  "cursor_shape": "bar",

  "redact_private_values": true,
  "private_files": [
    "**/.env*",
    "**/*.pem",
    "**/*.key",
    "**/*.cert",
    "**/*.crt",
    "**/secrets.yml"
  ],

  "agent": {
    "default_model": {
      "provider": "deepseek",
      "model": "deepseek-chat"
    },
    "always_allow_tool_actions": true,
    "model_parameters": []
  },

  "preview_tabs": {
    "enable_preview_from_file_finder": true
  },

  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_user_picture": false
  },

  "tabs": {
    "file_icons": true
  },

  "search": {
    "center_on_match": true
  },

  "use_smartcase_search": true,
  "prettier": {
    "allowed": true
  },

  "toolbar": {
    "agent_review": true,
    "selections_menu": true,
    "quick_actions": false,
    "breadcrumbs": false
  },

  "scrollbar": {
    "show": "auto",
    "cursors": false
  },

  "collaboration_panel": {
    "button": false
  },

  "outline_panel": {
    "button": false
  },

  "notification_panel": {
    "button": false
  },

  "terminal": {
    "button": false
  }
}
